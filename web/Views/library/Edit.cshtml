@model Book
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <br /><br />
    <div style="float: right">
        <h5>Изменить данные о книге</h5>
    </div>
    <br /><br />
    <div class="boox">
        <h4 style="margin-left:50px; margin-right:50px">
            <br />
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
            <br />
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </h4>
        <div align="center">
        <button type="submit" class="btn btn-cta-primary">Изменить</button>
        <button class="btn btn-cta-secondary" asp-controller="library" asp-action="Index" asp-route-cat="1">Отмена</button>
        </div>
    </div>
</form>

@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}