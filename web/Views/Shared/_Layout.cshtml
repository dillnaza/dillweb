@model dynamic

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
</head>

<body>
    <header id="header" class="header">
        <div class="container">
            <nav role="navigation">
                <ul class="nav navbar-nav">
                    <li><h2>Библиотека "GoodReader"</h2></li>
                </ul>
            </nav>
        </div>
    </header>

    <form id="promo" class="promo section offset-header" method="get">
        <div class="container text-center">
            <div class="btn">
                <button type=submit class="btn btn-cta-secondary" asp-controller="Library" asp-action="Index">1-категория</button>
                <button type=submit class="btn btn-cta-primary" asp-controller="Library" asp-action="Index">2-категория</button>
                <button type=submit class="btn btn-cta-secondary" asp-controller="Library" asp-action="Index">3-категория</button>
                <button type=submit class="btn btn-cta-primary" asp-controller="Library" asp-action="Index">4-категория</button>
                <button type=submit class="btn btn-cta-secondary" asp-controller="Library" asp-action="Index">5-категория</button>
            </div>
        </div>
    </form>

    <div class="container">
        <partial name="Tempdata" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
